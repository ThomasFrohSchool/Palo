<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.palo.palo">
    <!-- Allows access to internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Palo"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.profile.ProfileActivity"></activity>
        <activity android:name=".activities.login.register.RegisterActivity" />
        <activity android:name=".activities.extendedPost.ExtendedPostActivity" />
        <activity android:name=".activities.CreateNewPostActivity" />
        <activity android:name=".activities.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>